<h1>Edit Movie</h1>
<% if @movie.errors.any? %>
 <h2>The following errors prevented the movie from saving:</h2>
 <ul>
 <% @movie.errors.full_messages.each do |msg|%>
 <li><%= msg %></li>
 <% end %>
 </ul>
<% end %>
<%= form_for @movie do |f| %>
 <p>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
 </p>
 
 <p>
  <%= f.label :desc %><br>
  <%= f.text_area :desc %>
 </p>
 
 <p>
  <%= f.label :genres %><br>
  <%= f.text_area :genres %>
 </p>
 
 <p>
  <%= f.label :original_language %><br>
  <%= f.text_area :original_language %>
 </p>
 
 <p>
  <%= f.submit %>
 </p>
<% end %>