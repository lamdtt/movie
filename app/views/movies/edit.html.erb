<h1>Edit Movie</h1>

<%= form_for @movie do |f| %>

    <p>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </p>

    <p>
        <%= f.label :description %><br>
        <%= f.text_area :desc %>
    </p>

    <p>
        <%= f.label :Genres %><br>
        <%= f.text_field :genres %>
    </p>

    <p>
        <%= f.label :Lang %><br>
        <%= f.text_field :original_language %>
    </p>

    <p>
        <%= f.submit %>
    </p>

<% end %>